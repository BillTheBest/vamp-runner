{
  "name": "HTTP Deployment",
  "description": "Deploying single HTTP service.",
  "steps": [
    {
      "description": "Deploy service.",
      "run": {
        "method": "PUT",
        "resource": "deploy.yml",
        "await": [
          "deployments:sava", "clusters:sava", "services:runner", "synchronization:deployed"
        ]
      },
      "cleanup": {
        "method": "DELETE",
        "resource": "undeploy.yml",
        "await": [
          "deployments:sava", "clusters:sava", "services:runner", "synchronization:undeployed"
        ]
      }
    },
    {
      "description": "Send request to service and validate response.",
      "run": {
        "method": "PUT",
        "resource": "workflow.yml",
        "await": [
          "workflows:sava-requester", "exit:0"
        ]
      },
      "cleanup": {
        "method": "DELETE",
        "resource": "workflow.yml",
        "await": [
          "workflows:sava-requester", "unscheduled"
        ]
      }
    }
  ]
}
