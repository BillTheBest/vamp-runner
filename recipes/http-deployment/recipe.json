{
  "name": "HTTP Deployment",
  "description": "Deploying single HTTP service.",
  "steps": [
    {
      "description": "Deploy service.",
      "execute": {
        "method": "PUT",
        "resource": "artifacts.yml",
        "await": [
          "blueprints:runner",
          "deployed"
        ]
      },
      "cleanup": {
        "method": "DELETE",
        "resource": "artifacts.yml",
        "await": [
          "blueprints:runner",
          "undeployed"
        ]
      }
    },
    {
      "description": "Send request to service and validate response.",
      "execute": {
        "method": "PUT",
        "resource": "check.yml",
        "await": [
          "workflows:check-service",
          "exit"
        ]
      },
      "cleanup": {
        "method": "DELETE",
        "resource": "check.yml",
        "await": [
          "workflows:check-service",
          "persistence:deleted"
        ]
      }
    }
  ]
}
