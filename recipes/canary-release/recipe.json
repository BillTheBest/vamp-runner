{
  "name": "Canary Release",
  "description": "2 services and changing weight from 100% / 0% to 0% / 100%.",
  "steps": [
    {
      "description": "Create breeds for both services.",
      "run": {
        "method": "PUT",
        "resource": "deploy1.yml",
        "await": [
          "breeds:runner:2",
          "archive:update"
        ]
      },
      "cleanup": {
        "method": "DELETE",
        "resource": "undeploy1.yml",
        "await": [
          "breeds:runner:2",
          "archive:delete"
        ]
      }
    },
    {
      "description": "Deploy a blueprint with 2 services and weight 100% / 0%.",
      "run": {
        "method": "PUT",
        "resource": "deploy2.yml",
        "await": [
          "deployments:runner", "clusters:runner", "services:runner:1", "synchronization:deployed"
        ]
      },
      "cleanup": {
        "method": "DELETE",
        "resource": "undeploy2.yml",
        "await": [
          "deployments:runner", "clusters:runner", "services:runner:1", "synchronization:undeployed"
        ]
      }
    },
    {
      "description": "Send requests and perform canary release: 100% / 0% â‡’ 0% / 100%.",
      "run": {
        "method": "PUT",
        "resource": "workflow.yml",
        "await": [
          "workflows:runner-requester", "response:ok"
        ]
      },
      "cleanup": {
        "method": "DELETE",
        "resource": "workflow.yml",
        "await": [
          "workflows:runner-requester", "unscheduled"
        ]
      }
    }
  ]
}
